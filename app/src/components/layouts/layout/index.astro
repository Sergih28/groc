---
import { getLangFromUrl } from '@services/i18n/utils'

interface Props {
  title: string
}

const { title } = Astro.props
const lang = getLangFromUrl(Astro.url)
---

<!doctype html>
<html lang={lang} class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%2210 0 100 100%22><text y=%22.90em%22 font-size=%2290%22>ðŸŸ¡</text></svg>"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="grid h-screen grid-cols-5 grid-rows-5 bg-white dark:bg-slate-800">
    <slot />
    <style is:global></style>
  </body>
</html>

<script is:inline>
  const theme = (() => {
    if (undefined != typeof localStorage && localStorage.getItem('theme')) {
      return JSON.parse(localStorage.getItem('theme'))
    }
    if (matchMedia('(prefers-color-scheme: dark)').matches) {
      return 'dark'
    }
    return 'light'
  })()

  if ('dark' === theme) {
    document.documentElement.classList.add('dark')
  } else {
    document.documentElement.classList.remove('dark')
  }

  localStorage.setItem('theme', theme)
</script>
