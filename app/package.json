{
  "name": "groc",
  "version": "0.0.1",
  "scripts": {
    "prepare": "cd .. && husky install",
    "dev": "tmuxinator start --project-config=./config/tmuxinator.yml",
    "dev:all": "concurrently \"pnpm dev:astro\" \"pnpm tailwind\" \"pnpm storybook\"",
    "dev:astro": "astro dev",
    "test:unit": "vitest --dir tests/unit --run",
    "test:unit:watch": "vitest --dir tests/unit",
    "test:e2e": "pnpx playwright-watch test",
    "test:e2e:ui": "pnpx playwright test --ui",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx,.astro src tests",
    "lint:fix": "eslint --ext .js,.jsx,.ts,.tsx,.astro src tests --fix",
    "lint:commit": "commitlint --edit \"$1\" --verbose",
    "lint:docs": "markdownlint ../*.md ../docs/*.md ../docs/**/*.md --ignore node_modules",
    "lint:docs:fix": "markdownlint ../*.md ../docs/*.md ../docs/**/*.md --ignore node_modules --fix",
    "lint:md": "eslint --ext .md ./ --ignore-pattern='node_modules'",
    "lint:md:fix": "eslint --ext .md ./ --ignore-pattern='node_modules' --fix",
    "prettier:fix": "prettier --write src tests",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "tailwind": "pnpx tailwindcss -i ./src/styles/index.css -o ./dist/output.css --watch"
  },
  "dependencies": {
    "@astrojs/check": "0.3.4",
    "@astrojs/react": "3.0.8",
    "@astrojs/tailwind": "5.0.4",
    "@nanostores/react": "0.7.1",
    "@tanstack/react-query": "5.8.6",
    "@types/react": "18.0.21",
    "@types/react-dom": "18.0.6",
    "astro": "4.0.7",
    "dayjs": "1.11.10",
    "formik": "2.4.5",
    "nanostores": "0.9.5",
    "react": "18.0.0",
    "react-dom": "18.0.0",
    "react-icons": "4.12.0",
    "sonner": "1.2.3",
    "tailwindcss": "3.0.24",
    "typescript": "5.2.2"
  },
  "devDependencies": {
    "@commitlint/cli": "18.4.3",
    "@commitlint/config-conventional": "18.4.3",
    "@playwright/test": "1.40.0",
    "@storybook/addon-essentials": "7.5.3",
    "@storybook/addon-interactions": "7.5.3",
    "@storybook/addon-links": "7.5.3",
    "@storybook/addon-onboarding": "1.0.8",
    "@storybook/addon-postcss": "2.0.0",
    "@storybook/blocks": "7.5.3",
    "@storybook/react": "7.5.3",
    "@storybook/react-vite": "7.5.3",
    "@storybook/testing-library": "0.2.2",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "14.1.2",
    "@types/node": "20.9.2",
    "@typescript-eslint/eslint-plugin": "6.11.0",
    "@typescript-eslint/parser": "6.11.0",
    "@vitejs/plugin-react": "4.2.1",
    "concurrently": "8.2.2",
    "eslint": "8.54.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-astro": "0.29.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-markdownlint": "0.5.0",
    "eslint-plugin-storybook": "0.6.15",
    "jsdom": "23.0.1",
    "markdownlint": "0.32.1",
    "markdownlint-cli": "0.37.0",
    "prettier": "3.1.0",
    "prettier-plugin-astro": "0.12.2",
    "prettier-plugin-tailwindcss": "0.5.7",
    "storybook": "7.5.3",
    "stylelint": "16.1.0",
    "stylelint-config-recommended": "^14.0.0",
    "vite": "5.0.7",
    "vitest": "1.0.4"
  },
  "optionalDependencies": {
    "husky": "8.0.3"
  }
}
